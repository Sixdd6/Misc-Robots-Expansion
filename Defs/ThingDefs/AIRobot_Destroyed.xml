<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

	<!-- =========== Bases =========== -->

	<ThingDef Name="DisabledBase" Abstract="True">
		<thingClass>AIRobot.X2_AIRobot_disabled</thingClass>
		<techLevel>Industrial</techLevel>
		<category>Item</category>
		<altitudeLayer>Item</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<smeltable>true</smeltable>
		<fillPercent>0.4</fillPercent>
		<statBases>
			<MaxHitPoints>50</MaxHitPoints>
			<MarketValue>25</MarketValue>
			<Flammability>1</Flammability>
			<Beauty>-10</Beauty>
			<DeteriorationRate>1</DeteriorationRate>
			<SellPriceFactor>0.30</SellPriceFactor>
		</statBases>
		<selectable>true</selectable>
		<pathCost>55</pathCost>
		<pathCostIgnoreRepeat>true</pathCostIgnoreRepeat>
		<randomizeRotationOnSpawn>true</randomizeRotationOnSpawn>
		<tradeNeverStack>true</tradeNeverStack>
		<stackLimit>1</stackLimit>
		<useHitPoints>true</useHitPoints>
		<scatterableOnMapGen>false</scatterableOnMapGen>
		<alwaysHaulable>true</alwaysHaulable>
		<comps>
			<li Class="CompProperties_Forbiddable"/>
		</comps>
		<thingCategories>
			<li>Robots</li>
		</thingCategories>
	</ThingDef>

	<ThingDef ParentName="DisabledBase">
		<defName>AIRobot_Miner_disabled</defName>
		<label>MinerBot (disabled)</label>
		<description>This is the sad end of a home bot. It's no longer useful and needs heavy repairs or dismantling.</description>
		<graphicData>
			<texPath>Things/Robot/Miner/Master/Miner_Bot_back</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(1.7,1.7)</drawSize>
		</graphicData>
		<statBases>
			<WorkToMake>15000</WorkToMake>
			<Mass>12</Mass>
		</statBases>
		<soundDrop>ChunkRock_Drop</soundDrop>
		<butcherProducts>
			<Steel>25</Steel>
		</butcherProducts>
		<costList>
			<Steel>35</Steel>
			<Component>5</Component>
		</costList>
	</ThingDef>

